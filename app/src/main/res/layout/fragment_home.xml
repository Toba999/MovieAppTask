<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Horizontal RecyclerView -->
            <TextView
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:text="@string/top_rated_movies" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topMoviesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <!-- Second Horizontal RecyclerView -->
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:text="@string/coming_soon_movies" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comingSoonRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <!-- Third Horizontal RecyclerView -->
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:text="@string/in_theater_movies" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/inTheaterRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <!-- Vertical RecyclerView -->
            <TextView
                android:id="@+id/txt_box_office"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:text="@string/box_office_movies" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/boxOfficeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
</ScrollView>
